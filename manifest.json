{
    "name": "Meli Search",
    "description": "MercadoLibre Seeker is a plugin from Chrome to search quickly any product.",
    "version": "0.2",
    //"background_page": "background.html",
    //"options_page": "options.html",
    "permissions": [
        "geolocation",
        "cookies",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "MercadoLibre Seeker",
        "popup": "popup.html"
    }
}